<!-- ==============================================
    ABOUT
=============================================== -->
<section id="about" class="parallax-bg padding-top-bottom cta-image" data-parallax-background="<%= image_path "light-abstract.jpg"%>" data-stellar-background-ratio=".3">     
  <div class="container">

    <h1 class="section-title">Going Somewhere?</h1>

    <p class="section-description">Lookup your ticketed event <i class="fa fa-ticket"></i><br/></p>

    <div class="row">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-6 scrollimation fade-up">
        
        <div class='notice'><%= flash[:notice] %></div>
        
        <%= bootstrap_form_for @event, :id => 'contact-form', :class => "col-sm-8 col-sm-offset-2", :html => {:novalidate => 'novalidate'} do |f| %>

          <div class="form-group">
              <%= f.text_field :name, :label => 'Event Name', :placeholder => 'Search by event name', :class => 'form-control input-lg', :"data-error-empty" => 'Please enter ticket event name', :required => true, :onfocus => "this.placeholder = ''" %>
          </div>

        <div class="form-group">
            <%= f.text_field :date, :label => 'Event Date', :class => 'form-control input-lg datepicker dp', :'data-behaviour' => 'datepicker', :placeholder => 'DD-MM-YYYY', :required => true, :onfocus => "this.placeholder = ''" %>
        </div>

        <div class="text-center">
        <%= f.submit 'Search', :class => 'btn btn-quattro', :'data-error-message' => "Error!" %>
        </div>
        <% end %>
      </div>

      <div class="col-sm-3">
      </div>
    
      
    </div><!--End row-->
    
  </div><!--End container -->
  
</section><!--End Call to Action -->